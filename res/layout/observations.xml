<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/observation_mode_selector">
        <Button android:layout_width="wrap_content" android:text="« Prev" android:layout_height="wrap_content" android:id="@+id/button_to_prev"></Button>
        <Button android:layout_width="wrap_content" android:text="Next »" android:layout_height="wrap_content" android:id="@+id/button_to_next"></Button>
    </LinearLayout>
    
      	
  	<ViewFlipper android:id="@+id/observations"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent">
  		
  		<LinearLayout android:id="@+id/observations_entry"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:layout_gravity="center" android:orientation="vertical"
			android:background="#FFFFFF" android:padding="20sp" >
			<Spinner android:id="@+id/colour_picker"
		    	android:layout_width="wrap_content" android:layout_height="wrap_content"
		    	android:drawSelectorOnTop="true" android:prompt="@string/item_prompt" />
			<EditText android:hint="Enter your observation here ..." android:id="@+id/observation_text"
				android:layout_width="match_parent" android:layout_height="wrap_content" />
		    <Button android:text="Back Button" android:id="@+id/back_button"
		    	android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
		
		<LinearLayout android:id="@+id/observations_cloud"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:layout_gravity="center" android:orientation="vertical"
			android:background="#FFFFFF" android:padding="20sp" >
			
		</LinearLayout>	
		
 	</ViewFlipper>
</LinearLayout>