<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:layout_gravity="center" android:orientation="vertical"
	android:background="#FFFFFF" android:padding="20sp">

	<Spinner android:id="@+id/colour_picker" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:drawSelectorOnTop="true"
		android:prompt="@string/item_prompt" />
	<EditText android:hint="Enter your observation here ..."
		android:id="@+id/observation_text" android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<Button android:text="Back Button" android:id="@+id/back_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>
