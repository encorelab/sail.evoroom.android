<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="match_parent">

	<TextView android:id="@+id/details_selected_item_text"
		android:layout_width="640sp" android:layout_height="120sp"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
		android:layout_marginTop="50sp"
		android:background="#000000" android:textSize="30sp" />
	<ImageView android:id="@+id/details_selected_item_area"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignTop="@id/details_selected_item_text"
		android:layout_alignRight="@id/details_selected_item_text" />
	<ImageView android:id="@+id/dotted_line1" android:src="@drawable/dotted_line_4in"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@id/details_selected_item_text" android:layout_centerHorizontal="true" />
	<TextView android:id="@+id/details_selected_item_content"
		android:layout_width="640sp" android:layout_height="700sp"
		android:layout_below="@id/dotted_line1" android:layout_centerHorizontal="true"
		android:background="#000000" />
	<ImageView android:id="@+id/dotted_line2" android:src="@drawable/dotted_line_4in"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@id/details_selected_item_content" android:layout_centerHorizontal="true" />
	<TextView android:id="@+id/details_selected_item_tags"
		android:layout_width="640sp" android:layout_height="300sp"
		android:layout_below="@id/dotted_line2" android:layout_centerHorizontal="true"
		android:background="#000000" />  
  	<ImageView android:src="@drawable/back_bkgd"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"	android:layout_alignParentLeft="true" />
	<Button android:id="@+id/details_back_button" android:background="@drawable/back_btn"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:layout_marginBottom="13sp"
		android:layout_marginLeft="18sp" />
  
</RelativeLayout>